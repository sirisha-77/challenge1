<body>

  <div class="sidebar">
    <h2>P&M Dashboard</h2>
    <a href="#">Home</a>
    <a href="#">Patterns</a>
    <a href="#">Merino Wool</a>
    <a href="#">Orders</a>
    <a href="#">Analytics</a>
  </div>

  <div id="root" class="main"></div>

  <!-- Load React & ReactDOM via CDN -->
  <script src="https://unpkg.com/react@18/umd/react.development.js" crossorigin></script>
  <script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js" crossorigin></script>
  <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>

  <!-- React App -->
  <script type="text/babel">
    const { useState } = React;

    function DashboardCard({ title, value, description }) {
      return (
        <div className="card">
          <h3>{title}</h3>
          <p><strong>{value}</strong></p>
          <small>{description}</small>
        </div>
      );
    }

    function Dashboard() {
      const [data] = useState([
        { title: "Patterns Sold", value: "1,240", description: "In the last 30 days" },
        { title: "Merino Stock", value: "820kg", description: "Remaining inventory" },
        { title: "Orders", value: "312", description: "Pending & Completed" },
        { title: "Revenue", value: "$25,400", description: "This month" }
      ]);

      return (
        <div>
          <div className="dashboard-header">Welcome to Patterns & Merino Dashboard</div>
          <div className="grid">
            {data.map((item, index) => (
              <DashboardCard
                key={index}
                title={item.title}
                value={item.value}
                description={item.description}
              />
            ))}
          </div>
        </div>
      );
    }

    const root = ReactDOM.createRoot(document.getElementById("root"));
    root.render(<Dashboard />);
  </script>
</body>
</html>
